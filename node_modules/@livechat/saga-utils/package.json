{
  "name": "@livechat/saga-utils",
  "version": "0.0.1",
  "description": "Saga utility functions",
  "contributors": [
    "Konrad Kruk <k.kruk@livechatinc.com>",
    "Mateusz Burzy≈Ñski <m.burzynski@livechatinc.com>"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "files": [
    "lib",
    "es"
  ],
  "keywords": [
    "redux",
    "redux-saga"
  ],
  "peerDependencies": {
    "redux-saga": ">=0.10"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^5.0.0",
    "jest": "^21.2.1",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^2.0.1"
  },
  "scripts": {
    "prebuild": "rimraf es lib dist",
    "build:umd:min": "cross-env BABEL_ENV=es NODE_ENV=production rollup -c -i src/index.js -o dist/saga-utils.min.js",
    "build:umd": "cross-env BABEL_ENV=es NODE_ENV=development rollup -c -i src/index.js -o dist/saga-utils.js",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --ignore *.test.js --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --ignore *.test.js --out-dir es",
    "build": "run-p build:**",
    "watch": "npm run build:es -- --watch",
    "test": "jest",
    "prepare": "npm run build",
    "prepublish": "test $(npm -v | tr . '\\n' | head -n 1) -ge '4' || exit 1"
  }
}
